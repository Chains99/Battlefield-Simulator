def Void set_weapon_to_semi(Weapon weapon):
{
	weapon.set_fire_rate(1);
};

def Void semi_fire_on_sight(Map map, Soldier soldier):
{
	set_weapon_to_semi(soldier.equipped_weapon);
	List_Soldier soldiers = detect_enemies_within_eff_range(soldier,map);
	Number k = 0;
	while(k < len(soldiers)):
	{
		k = k+1;
	};
};